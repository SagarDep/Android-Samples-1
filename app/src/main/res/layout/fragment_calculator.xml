<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sai_h.labex.NativeCalculatorFragment">

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/val"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/val"
        android:layout_margin="10dp"
        android:elevation="5dp"
        android:shrinkColumns="*"
        android:stretchColumns="*">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:text="1"
                android:id="@+id/b1"/>
            <Button android:text="2"
                android:id="@+id/b2" />
            <Button android:text="3"
                android:id="@+id/b3"/>
            <Button android:text="4"
                android:id="@+id/b4"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
            android:text="5"
            android:id="@+id/b5"/>
        <Button android:text="6"
            android:id="@+id/b6" />
        <Button android:text="7"
            android:id="@+id/b7"/>
        <Button android:text="8"
            android:id="@+id/b8"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:text="9"
                android:id="@+id/b9"/>
            <Button android:text="0"
                android:id="@+id/b0" />
            <Button android:text="="
                android:id="@+id/eq"/>
            <Button android:text="C"
                android:id="@+id/c"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:text="+"
                android:id="@+id/add"/>
            <Button android:text="-"
                android:id="@+id/sub" />
            <Button android:text="*"
                android:id="@+id/mul"/>
            <Button android:text="/"
                android:id="@+id/div"/>
        </TableRow>
    </TableLayout>
</RelativeLayout>
